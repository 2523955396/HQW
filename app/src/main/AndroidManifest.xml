<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.huanqi.hqw">

    <uses-permission android:name="android.permission.INTERNET" /><!--因特网-->

    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" /><!--安装APK需要的权限-->
    <uses-permission
        android:name="android.permission.QUERY_ALL_PACKAGES"
        tools:ignore="QueryAllPackagesPermission" /><!--获取系统应用信息权限 Android11&+需要 AndroidUtil-->

    <!--     安卓13废弃废弃读写动权-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /><!--外部文件读取权限 android13-需要-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /><!--外部文件写入权限 android13-需要-->

    <!--     安卓13新增权限 针对图片视频语音-->
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" /><!--外部文件图片读取权限 android13&+需要-->
    <uses-permission android:name="android.permission.READ_MEDIA_AUDIO" /><!--外部文件音频读取权限 android13&+需要-->
    <uses-permission android:name="android.permission.READ_MEDIA_VIDEO" /><!--外部文件视频读取权限 android13&+需要-->

    <!--     安卓12新增权限 针对蓝牙-->
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" /><!--外部文件视频读取权限 android12&+需要-->
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" /><!--外部文件视频读取权限 android12&+需要-->
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" /><!--外部文件视频读取权限 android12&+需要-->

    <!--     安卓12调用蓝牙可不需要位置信息 针对蓝牙-->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" /><!--粗略位置信息-->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" /><!--粗略位置信息-->


    <!--粗略位置信息
     android:usesPermissionFlags="neverForLocation"安卓12&+不给位置定位权限搜索蓝牙设备需要添加,否则搜索不到蓝牙位置
     android:usesCleartextTraffic="true"明文流量

    -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="${AppName}"
        android:preserveLegacyExternalStorage="true"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.HQW"
        android:usesCleartextTraffic="true"
        android:usesPermissionFlags="neverForLocation">
        <activity
            android:name=".MainActivity"
            android:configChanges="orientation|screenSize"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/filepaths" />
        </provider>
    </application>


</manifest>